#!/usr/bin/make -f

export DH_OPTIONS

BUILD_DIR := obj-$(DEB_BUILD_GNU_TYPE)
export DH_GOPKG := github.com/git-lfs/git-lfs
export DH_GOLANG_EXCLUDES := test vendor
export PATH := $(CURDIR)/$(BUILD_DIR)/bin:$(PATH)

%:
	dh $@ --buildsystem=golang --with=golang

override_dh_clean:
	rm -rf man
	dh_clean

override_dh_auto_build:
	rm -rf $(BUILD_DIR)/src/github.com/git-lfs/git-lfs/vendor
	dh_auto_build
	rm $(BUILD_DIR)/bin/script
	rm $(BUILD_DIR)/bin/man
	rm $(BUILD_DIR)/bin/genmakefile
	./script/man

override_dh_strip:
	# strip disabled as golang upstream doesn't support it and it makes go
	# crash. See https://launchpad.net/bugs/1200255.

override_dh_auto_test:
	ln -s ../../../../../../commands/repos $(BUILD_DIR)/src/github.com/git-lfs/git-lfs/commands/repos
	ln -s ../../../../bin $(BUILD_DIR)/src/github.com/git-lfs/git-lfs/bin
	ln -s ../../../../../../../git/githistory/fixtures $(BUILD_DIR)/src/github.com/git-lfs/git-lfs/git/githistory/fixtures
	ln -s ../../../../../../locking/schemas $(BUILD_DIR)/src/github.com/git-lfs/git-lfs/locking/schemas
	ln -s ../../../../../../tq/schemas $(BUILD_DIR)/src/github.com/git-lfs/git-lfs/tq/schemas
	dh_auto_test
	rm $(BUILD_DIR)/src/github.com/git-lfs/git-lfs/commands/repos $(BUILD_DIR)/src/github.com/git-lfs/git-lfs/bin $(BUILD_DIR)/src/github.com/git-lfs/git-lfs/git/githistory/fixtures $(BUILD_DIR)/src/github.com/git-lfs/git-lfs/tq/schemas $(BUILD_DIR)/src/github.com/git-lfs/git-lfs/locking/schemas
